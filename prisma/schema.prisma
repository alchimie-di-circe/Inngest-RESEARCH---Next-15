// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Example model for research data
model ResearchContext {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String   @db.Text
  metadata  Json?
  
  @@index([createdAt])
}

// Example model for agent runs
model AgentRun {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    String   @default("pending")
  result    Json?
  error     String?
  
  @@index([status])
  @@index([createdAt])
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum TabType {
  DEEP
  CONTEXT
  CONTENT
  PUBLISH
}

enum ContentStatus {
  DRAFT
  APPROVED
  REJECTED
  PUBLISHED
}

enum Platform {
  BLOG
  TWITTER
  LINKEDIN
  INSTAGRAM
  SHOPIFY
}

model ResearchJob {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  jobTitle    String
  jobBrief    String    @db.Text
  status      JobStatus @default(PENDING)
  jobResult   Json?
  brandConfig BrandConfig? @relation(fields: [brandConfigId], references: [id], onDelete: SetNull)
  brandConfigId String?

  @@index([status])
  @@index([createdAt])
}

model BrandConfig {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  brandName       String
  brandDescription String  @db.Text
  brandTone       String
  brandKeywords   String[]
  brandWebsite    String?
  jobs            ResearchJob[]

  @@index([brandName])
}

model ContentItem {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  content     String        @db.Text
  status      ContentStatus @default(DRAFT)
  platform    Platform
  publishDate DateTime?
  metadata    Json?
  queue       PublishingQueue? @relation(fields: [publishingQueueId], references: [id], onDelete: SetNull)
  publishingQueueId String?

  @@index([status])
  @@index([platform])
}

model PublishingQueue {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  items       ContentItem[]
  publishDate DateTime
  isPublished Boolean       @default(false)

  @@index([publishDate])
}

model AgentAuditLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  agentName String
  action    String
  details   Json?

  @@index([agentName])
  @@index([createdAt])
}
